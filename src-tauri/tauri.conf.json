{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Notisr",
  "version": "0.2.1",
  "identifier": "com.y2kforever.notisr",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://localhost",
        "img-src": "'self' https://static-cdn.jtvnw.net"
      }
    }
  },
  "bundle": {
    "macOS": {
      "entitlements": "Entitlements.plist",
      "signingIdentity": "com.y2kforever.notisr"
    },
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": ["dmg", "msi", "nsis", "app"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMyNTUwMTZCNjJERjRGRUMKUldUc1Q5OWlhd0ZWd2xDeHBMdWErZWZSRTFwbUNlaUh2S1Z5bEFnOVZRcFltcllQeU1TcVViTU8K",
      "endpoints": ["https://github.com/y2kforever/notisr/releases/latest/download/latest.json"]
    }
  }
}
